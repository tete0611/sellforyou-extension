{
	"manifest_version": 3,
	"name": "셀포유",
	"description": "해외구매대행 셀러를 위한 원클릭 솔루션",
	"background": {
		"service_worker": "background.bundle.js"
	},
	"permissions": ["downloads", "storage", "tabs"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": "icon48.png"
	},
	"icons": {
		"128": "icon128.png"
	},
	"content_scripts": [
		{
			"run_at": "document_start",
			"matches": ["<all_urls>"],
			"js": ["contentScript.bundle.js"],
			"css": ["content.styles.css"]
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"icon.png",
				"icon16.png",
				"icon48.png",
				"icon128.png",
				"/ui/*",
				"/resources/*",
				"content.styles.css",
				"app.html",
				"banwords.html",
				"connects.html",
				"dashboard.html",
				"keyword/analysis.html",
				"keyword/reference.html",
				"order/new.html",
				"order/delivery.html",
				"order/tax.html",
				"product/collected.html",
				"product/registered.html",
				"product/Locked.html",
				"settings.html",
				"sourcing.html",
				"trangers_single.html",
				"trangers_multiple.html",
				"payments.html"
			],
			"matches": ["<all_urls>"]
		}
	]
}
